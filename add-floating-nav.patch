+function goHome() {
+  const role = currentUser.value?.role
+  const roleToRoute = { admin: 'AdminDashboard', teacher: 'TeacherDashboard', student: 'StudentDashboard' }
+  const target = roleToRoute[role] || 'Dashboard'
+  if (router.hasRoute(target)) router.push({ name: target }).catch(()=>router.push('/'))
+  else router.push('/')
+}
+
+function doLogout() {
+  try { localStorage.removeItem('mock:currentUser') } catch {}
+  // optionally clear other mock keys
+  router.push('/login').catch(()=>{ location.href = '/login' })
+}
