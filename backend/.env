# Server Configuration
NODE_ENV=development
PORT=8080
API_VERSION=v1

# Database - Using PostgreSQL (recommended for production features)
# Note: You'll need PostgreSQL installed and running
# For SQLite alternative: "file:./dev.db" (but lacks Json/Enum support)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/gco_db?schema=public"

# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-2024-please-change-in-production
JWT_REFRESH_SECRET=dev-refresh-secret-key-2024-please-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (optional for development - will work without it)
REDIS_URL=disabled
REDIS_PASSWORD=

# DigitalOcean Spaces / S3 Configuration (optional - falls back to local storage)
SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
SPACES_REGION=nyc3
SPACES_BUCKET=gco-files
SPACES_KEY=your-spaces-access-key
SPACES_SECRET=your-spaces-secret-key
SPACES_CDN_URL=https://gco-files.nyc3.cdn.digitaloceanspaces.com

# Email Configuration (for notifications - optional for development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@gco.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
